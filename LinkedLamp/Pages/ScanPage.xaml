<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.ScanPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Scan">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label x:Name="MainLabel"
            FontSize="18"
            Text="Turn on the bluetooth mode on your LinkedLamp device by powering it on while holding the button pressed"/>
        <Button
            x:Name="RetryScanAndConnectProcessButton"
            Text="Retry"
            FontSize="18"
            Clicked="OnRetryScanAndConnectProcessButtonClicked"/>
        <Picker x:Name="SsidPicker"
            Title="Select SSID"
            SelectedIndexChanged="OnSsidSelected" 
            IsVisible = "false"/>
        <Entry x:Name="PassEntry"
            Placeholder="Wifi password"
            IsPassword="True"
            TextChanged="OnPassEntryChanged"
            MaxLength="63"/>
        <Picker x:Name="GroupPicker"
            Title="Select group"
            SelectedIndexChanged="OnGroupSelected"
            IsVisible="false"/>
        <Button
            x:Name="StartProvisionProcessButton"
            Text="Send configuration"
            FontSize="18"
            Clicked="OnStartProvisionProcessButtonClicked"/>
        <Label x:Name="SecondaryLabel"
            Text=""
            FontSize="18"/>
    </VerticalStackLayout>
</ContentPage>
