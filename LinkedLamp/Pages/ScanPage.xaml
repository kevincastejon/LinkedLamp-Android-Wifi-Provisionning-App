<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.ScanPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:i18n="clr-namespace:LinkedLamp.Resources.Strings"
    Title="{x:Static i18n:AppResources.Scan_Title}">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label x:Name="MainLabel"
            FontSize="18"
            Text="{x:Static i18n:AppResources.Scan_MainInstruction}"/>
        <Button
            x:Name="RetryScanAndConnectProcessButton"
            Text="{x:Static i18n:AppResources.Scan_Retry}"
            FontSize="18"
            Clicked="OnRetryScanAndConnectProcessButtonClicked"/>
        <Picker x:Name="SsidPicker"
            Title="{x:Static i18n:AppResources.Scan_SsidPicker_Title}"
            SelectedIndexChanged="OnSsidSelected" 
            IsVisible = "false"/>
        <Grid>
            <Entry x:Name="PassEntry"
                Placeholder="{x:Static i18n:AppResources.Scan_WifiPassword_Placeholder}"
                IsPassword="True"
                TextChanged="OnPassEntryChanged"
                MaxLength="63"/>
            <ImageButton
                x:Name="TogglePasswordButton"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Margin="0,0,8,0"
                BackgroundColor="Transparent"
                WidthRequest="32"
                HeightRequest="32"
                Padding="4"
                Clicked="OnTogglePasswordClicked"
                Source="eye_closed.png" />
        </Grid>
        <Picker x:Name="GroupPicker"
            Title="{x:Static i18n:AppResources.Scan_GroupPicker_Title}"
            SelectedIndexChanged="OnGroupSelected"
            IsVisible="false"/>
        <Button
            x:Name="StartProvisionProcessButton"
            Text="{x:Static i18n:AppResources.Scan_SendConfiguration}"
            FontSize="18"
            Clicked="OnStartProvisionProcessButtonClicked"/>
        <Label x:Name="SecondaryLabel"
            Text=""
            FontSize="18"/>
    </VerticalStackLayout>
</ContentPage>
