<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:i18n="clr-namespace:LinkedLamp.Resources.Strings"
    Title="Connect to account">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Entry x:Name="UsernameEntry" Placeholder="{x:Static i18n:AppResources.Login_UsernamePlaceholder}" />
        <Grid>
            <Entry x:Name="PasswordEntry" Placeholder="{x:Static i18n:AppResources.Login_PasswordPlaceholder}" IsPassword="True" />
            <ImageButton
                x:Name="TogglePasswordButton"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Margin="0,0,8,0"
                BackgroundColor="Transparent"
                WidthRequest="32"
                HeightRequest="32"
                Padding="4"
                Clicked="OnTogglePasswordClicked"
                Source="eye_closed.png" />
        </Grid>
        <Button Text="{x:Static i18n:AppResources.Login_Button}" Clicked="OnLoginClicked" />
        <Label x:Name="StatusLabel" Text="" />
    </VerticalStackLayout>
</ContentPage>
