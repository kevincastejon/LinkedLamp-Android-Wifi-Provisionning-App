<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Create account">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Grid>
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
            <ImageButton
                x:Name="TogglePasswordButton"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Margin="0,0,8,0"
                BackgroundColor="Transparent"
                WidthRequest="32"
                HeightRequest="32"
                Padding="4"
                Clicked="OnTogglePasswordClicked"
                Source="eye_closed.png" />
        </Grid>
        <Entry x:Name="EmailEntry" Placeholder="Email (optional)" Keyboard="Email" />
        <Button Text="Create account" Clicked="OnRegisterClicked" />
        <Label x:Name="StatusLabel" Text="" />
    </VerticalStackLayout>
</ContentPage>
