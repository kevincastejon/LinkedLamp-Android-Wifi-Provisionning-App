<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.ManageGroupsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:i18n="clr-namespace:LinkedLamp.Resources.Strings"
    Title="{x:Static i18n:AppResources.Home_ManageGroupsButton}">

    <Grid Padding="24" RowDefinitions="Auto,*,Auto" RowSpacing="12">
        <VerticalStackLayout Grid.Row="0" Spacing="6">
            <VerticalStackLayout Grid.Row="0" Spacing="6">
                <Label Text="{x:Static i18n:AppResources.Home_ManageGroupsButton}" Style="{DynamicResource PageTitle}" />
                <Label x:Name="StatusLabel" Text="" Style="{DynamicResource Subtitle}" />
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="0" Spacing="6">
                <Label x:Name="MyGroupsLabel" Text="{x:Static i18n:AppResources.ManageGroups_MyGroupsSubtitle}" Style="{DynamicResource Subtitle}" />
                <BoxView HeightRequest="1" HorizontalOptions="Fill" BackgroundColor="{AppThemeBinding Light={DynamicResource DividerLight}, Dark={DynamicResource DividerDark}}" Margin="0,12" />
            </VerticalStackLayout>
        </VerticalStackLayout>
        <RefreshView x:Name="GroupsRefreshView" Grid.Row="1" Refreshing="OnGroupsRefreshing">
            <VerticalStackLayout Grid.Row="0" Spacing="6">
                <CollectionView x:Name="MyGroupsView" Grid.Row="1" SelectionMode="Single" SelectionChanged="OnMyGroupSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{DynamicResource Card}">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8" VerticalOptions="Center">
                                    <Image Grid.Column="0" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" IsVisible="{Binding IsOwner}">
                                        <Image.Source>
                                            <FontImageSource Glyph="&#xecb3;" FontFamily="MaterialSymbols" Size="20" Color="#F5B301" />
                                        </Image.Source>
                                    </Image>
                                    <Label Grid.Column="1" Text="{Binding Name}" FontSize="16" VerticalOptions="Center" LineBreakMode="TailTruncation" />
                                    <Label Grid.Column="2" Text="&#xE5E1;" FontFamily="MaterialSymbols" FontSize="20" VerticalOptions="Center" Opacity="0.5" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label x:Name="FriendsGroupsLabel" Text="{x:Static i18n:AppResources.ManageGroups_FriendsGroupsSubtitle}" Style="{DynamicResource Subtitle}" />
                <BoxView HeightRequest="1" HorizontalOptions="Fill" BackgroundColor="{AppThemeBinding Light={DynamicResource DividerLight}, Dark={DynamicResource DividerDark}}" Margin="0,12" />
                <CollectionView x:Name="FriendsGroupsView" Grid.Row="1" SelectionMode="Single" SelectionChanged="OnFriendsGroupSelected">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{DynamicResource Card}">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8" VerticalOptions="Center">
                                    <Image Grid.Column="0" WidthRequest="20" HeightRequest="20" VerticalOptions="Center" IsVisible="{Binding IsOwner}">
                                        <Image.Source>
                                            <FontImageSource Glyph="&#xecb3;" FontFamily="MaterialSymbols" Size="20" Color="#F5B301" />
                                        </Image.Source>
                                    </Image>
                                    <Label Grid.Column="1" Text="{Binding Name}" FontSize="16" VerticalOptions="Center" LineBreakMode="TailTruncation" />
                                    <Label Grid.Column="2" Text="&#xE5E1;" FontFamily="MaterialSymbols" FontSize="20" VerticalOptions="Center" Opacity="0.5" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </RefreshView>
        <Button Grid.Row="2" Text="{x:Static i18n:AppResources.ManageGroups_CreateGroupButton}" Clicked="OnCreateGroupClicked" />
    </Grid>
</ContentPage>
