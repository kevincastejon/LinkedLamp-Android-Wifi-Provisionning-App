<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.ManageGroupsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:i18n="clr-namespace:LinkedLamp.Resources.Strings"
    Title="{x:Static i18n:AppResources.Home_ManageGroupsButton}">

    <Grid Padding="24" RowDefinitions="Auto,*,Auto" RowSpacing="16">
        <VerticalStackLayout Grid.Row="0" Spacing="6">
            <Label Text="{x:Static i18n:AppResources.Home_ManageGroupsButton}" Style="{DynamicResource PageTitle}" />
            <Label x:Name="StatusLabel" Text="" Style="{DynamicResource Subtitle}" />
        </VerticalStackLayout>

        <RefreshView x:Name="GroupsRefreshView" Grid.Row="1" Refreshing="OnGroupsRefreshing">
            <CollectionView x:Name="GroupsView" SelectionMode="Single" SelectionChanged="OnGroupSelected">
                <CollectionView.EmptyView>
                    <Border Style="{DynamicResource Card}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Aucun groupe pour l’instant" FontAttributes="Bold" />
                            <Label Text="Crée un groupe pour commencer, ou rejoins-en un existant." Style="{DynamicResource Subtitle}" />
                            <Button Text="{x:Static i18n:AppResources.ManageGroups_CreateGroupButton}" Clicked="OnCreateGroupClicked" />
                        </VerticalStackLayout>
                    </Border>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{DynamicResource Card}">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="6">
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" LineBreakMode="TailTruncation" />

                                <Border Grid.Column="1" Style="{DynamicResource Chip}">
                                    <Label Text="{Binding Role}" FontSize="12" FontAttributes="Bold" />
                                </Border>

                                <Label Grid.Row="1" Text="Ouvrir" Style="{DynamicResource Subtitle}" />
                                <Label Grid.Row="1" Grid.Column="1" Text="›" FontSize="20" VerticalTextAlignment="Center" HorizontalTextAlignment="End" TextColor="{AppThemeBinding Light={DynamicResource Gray400}, Dark={DynamicResource Gray300}}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Grid.Row="2" Text="{x:Static i18n:AppResources.ManageGroups_CreateGroupButton}" Clicked="OnCreateGroupClicked" />
    </Grid>
</ContentPage>
