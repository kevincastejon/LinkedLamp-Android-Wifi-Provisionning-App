<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home">

    <Grid Padding="24" RowDefinitions="Auto,*" RowSpacing="16">
        <Label
            Text="LinkedLamp"
            FontSize="22"
            Grid.Row="0" />

        <VerticalStackLayout Grid.Row="1" Spacing="12">
            <VerticalStackLayout x:Name="LoggedOutLayout" Spacing="12" IsVisible="False">
                <Button Text="Create account" Clicked="OnCreateAccountClicked" />
                <Button Text="Connect to account" Clicked="OnConnectToAccountClicked" />
                <Button Text="I forgot my password" Clicked="OnForgotPasswordClicked" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="LoggedInLayout" Spacing="12" IsVisible="False">
                <Button Text="Manage groups" Clicked="OnManageGroupsClicked" />
                <Button Text="Configure LinkedLamp" Clicked="OnConfigureLinkedLampClicked" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
