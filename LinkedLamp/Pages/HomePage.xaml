<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:i18n="clr-namespace:LinkedLamp.Resources.Strings"
    Title="{x:Static i18n:AppResources.Home_PageTitle}">

    <Grid Padding="24" RowDefinitions="Auto,*" RowSpacing="16">
        <Label
            Text="LinkedLamp"
            FontSize="22"
            Grid.Row="0" />

        <VerticalStackLayout Grid.Row="1" Spacing="12">
            <VerticalStackLayout x:Name="LoggedOutLayout" Spacing="12" IsVisible="False">
                <Button Text="{x:Static i18n:AppResources.Home_CreateAccountButton}" Clicked="OnCreateAccountClicked" />
                <Button Text="{x:Static i18n:AppResources.Home_ConnectToAccountButton}" Clicked="OnConnectToAccountClicked" />
                <Button Text="{x:Static i18n:AppResources.Home_ForgotPasswordButton}" Clicked="OnForgotPasswordClicked" />
            </VerticalStackLayout>

            <VerticalStackLayout x:Name="LoggedInLayout" Spacing="12" IsVisible="False">
                <Button Text="{x:Static i18n:AppResources.Home_ManageGroupsButton}" Clicked="OnManageGroupsClicked" />
                <Button Text="{x:Static i18n:AppResources.Home_ConfigureLinkedLampButton}" Clicked="OnConfigureLinkedLampClicked" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
