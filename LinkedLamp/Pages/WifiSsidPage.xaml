<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.WifiSsidPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="WiFi">

    <VerticalStackLayout Padding="24" Spacing="12">
        <Label x:Name="MainLabel"
               Text="Select the WiFi network you want your LinkedLamp to connect to"
               FontSize="18" />

        <Picker x:Name="SsidPicker"
                Title="Select SSID"
                SelectedIndexChanged="OnSsidSelected" 
                IsVisible = "false"/>
    </VerticalStackLayout>
</ContentPage>
