<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LinkedLamp.Pages.ManageGroupPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:i18n="clr-namespace:LinkedLamp.Resources.Strings"
    Title="{x:Static i18n:AppResources.ManageGroup_PageTitle}">

    <Grid Padding="24" RowDefinitions="Auto,Auto,*" RowSpacing="16">
        <VerticalStackLayout Grid.Row="0" Spacing="6">
            <Label x:Name="HeaderLabel" Text="" Style="{DynamicResource PageTitle}" />
            <Label x:Name="StatusLabel" Text="" Style="{DynamicResource Subtitle}" />
        </VerticalStackLayout>

        <ScrollView Grid.Row="1" HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
            <HorizontalStackLayout Spacing="10">
                <Button x:Name="AddUserButton" Text="{x:Static i18n:AppResources.ManageGroup_AddUserButton}" Clicked="OnAddUserClicked" IsVisible="False" />
                <Button x:Name="RenameButton" Text="{x:Static i18n:AppResources.ManageGroup_RenameButton}" Clicked="OnRenameClicked" IsVisible="False" Style="{DynamicResource SecondaryButton}" />
                <Button x:Name="LeaveButton" Text="{x:Static i18n:AppResources.ManageGroup_LeaveButton}" Clicked="OnLeaveClicked" IsVisible="False" Style="{DynamicResource SecondaryButton}" />
                <Button x:Name="DeleteButton" Text="{x:Static i18n:AppResources.ManageGroup_DeleteButton}" Clicked="OnDeleteClicked" IsVisible="False" Style="{DynamicResource SecondaryButton}" TextColor="{DynamicResource Magenta}" />
            </HorizontalStackLayout>
        </ScrollView>

        <RefreshView x:Name="MembersRefreshView" Grid.Row="2" Refreshing="OnMembersRefreshing">
            <CollectionView x:Name="MembersView">
                <CollectionView.EmptyView>
                    <Border Style="{DynamicResource Card}">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Aucun membre" FontAttributes="Bold" />
                            <Label Text="Ajoute un utilisateur pour le lier à ce groupe." Style="{DynamicResource Subtitle}" />
                        </VerticalStackLayout>
                    </Border>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Reveal">
                                    <SwipeItem Text="{x:Static i18n:AppResources.ManageGroup_RemoveUserButton}" BackgroundColor="{DynamicResource Magenta}" Invoked="OnRemoveMemberClicked" IsVisible="{Binding CanRemove}" />
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Border Style="{DynamicResource Card}">
                                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding Username}" FontSize="18" FontAttributes="Bold" LineBreakMode="TailTruncation" />
                                        <Label Text="Glisse pour retirer" Style="{DynamicResource Subtitle}" IsVisible="{Binding CanRemove}" />
                                    </VerticalStackLayout>
                                    <Border Grid.Column="1" Style="{DynamicResource Chip}">
                                        <Label Text="{Binding Role}" FontSize="12" FontAttributes="Bold" />
                                    </Border>
                                </Grid>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
